    mtl                       >= 2       && < 3,
    snap-core                 >= 0.9     && < 1.1,
    snap                      >= 0.13    && < 1.1,
    text                      >= 0.11    && < 1.3,
    web-routes                >= 0.27    && < 0.28,
    xmlhtml                   >= 0.1

  default-language:    Haskell2010

